{
  "name": "tx-kit",
  "version": "1.0.0",
  "author": "nick",
  "license": "MIT",
  "private": true,
  "scripts": {
    "eslint": "eslint . --ext '.ts,.tsx'",
    "eslint:fix": "eslint . --ext '.ts,.tsx' --fix",
    "prettier": "prettier --check --config .prettierrc './**/src/*.{.js,jsx,ts,tsx}'",
    "prettier:fix": "prettier --config .prettierrc './**/src/*.{.js,jsx,ts,tsx}' --write",
    "lerna-version": "lerna version --no-private",
    "lerna-build": "pnpm prettier:fix && lerna run build",
    "test": "jest --testPathIgnorePatterns '.*fork.*'",
    "test-fork": "jest --testPathPattern '.*fork.*'",
    "vitest": "vitest fork --config ./packages/sdk/vitest.config.ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^20.11.2",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "lerna": "^8.1.3",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "viem": "^2.13.8"
  }
}